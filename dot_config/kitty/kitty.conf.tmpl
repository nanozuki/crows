# vim:ft=kitty

##: Fonts

font_family      {{if eq .term.font_family "JetBrainsMono" -}}JetBrainsMonoNL Nerd Font
{{- else if eq .term.font_family "VictorMono" -}}VictorMono Nerd Font
{{- else if eq .term.font_family "Iosevka"}}Iosevka Nerd Font{{- end}}
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size        {{.term.font_size}}

##: Cursor customization

cursor_shape          block
cursor_blink_interval 0

##: Scrollback

scrollback_lines 65535

##: Mouse

##: Performance tuning

##: Terminal bell

enable_audio_bell no

##: Window layout

enabled_layouts      Grid,Tall,Fat
window_padding_width 2

##: Tab bar

tab_bar_edge top
tab_bar_style fade
tab_fade 0.5 1
tab_title_template "{index}: {title}"

##: Color scheme

include rose-pine-dawn.conf

##: Advanced

shell_integration no-cursor

##: OS specific tweaks

macos_titlebar_color background
wayland_titlebar_color background

